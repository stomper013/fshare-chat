<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="robots" content="noindex, nofollow">
        <meta name="description" content="Chat">
        <meta name="keywords" content="Chat">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
        <script src="/socket.io/socket.io.js"></script>
        <title>Chat</title>
        <link rel="stylesheet" href="/stylesheets/chat.css"/>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    </head>

    <body>
        <div id="main">
            <div id="loichaobatdau">
                <div class="nhanvien">
                    <img class="img" src="fshare.png" alt="" style="width:64px;height: 64px">aaaa
                </div>
                <div class="loichao">aaaaa</div>
            </div>
            <div id="ndht" style="padding-bottom: 44px">
                {{!-- <div class="admin"></div> --}}
            </div>
        </div>
        <div id="hopchat" style="height: 46px">
            <form id="formchat" style="width:100%; height: 40px; background: #3b3b3b;padding: 8px 0px 0px 3px;" name="formchat">
                <textarea class="write_msg" spellcheck="false" type="text" maxlength="500" style="width: 76%; height: 20px; padding: 8px 0px 3px 5px; float:left; background: #fff;border-radius: 5px; resize: none; outline: none; border: none" placeholder="Nhập nội dung..." autocomplete="off"></textarea>
                <button style="width:20%;height:31px;padding: 8px 0px 3px 5px;display:inline; float: right;border-radius: 5px;margin-right: 0.5%;">
                    <i class="fas fa-paper-plane" aria-hidden="true"></i>
                </button>

            </form>
        </div>
    </body>
    <script>

        if ('{{ room }}' == '') 
            location.href = '/';
        
        var socket = io();
        var userName = '{{ username }}';
        var admin = 'admin';
        socket.emit("joinRoom", '{{ username }}', '{{ room }}', {{ newRoom }});

        socket.on("user-left-room", function (room, name) {
        });

        socket.on("private-msg-a", function (data) {
            if (data.from == admin && data.to == userName) {
                $('#ndht').append('<div class="admin">' + data.msg + '</div>');
                $('#ndht').scrollTop($('#ndht')[0].scrollHeight);
            }else{
                if(data.from == userName){
                    $('#ndht').append('<div class="client">' + data.msg + '</div>');
                    $('#ndht').scrollTop($('#ndht')[0].scrollHeight);
                }
            }
        })

        $('.write_msg').keypress(function (err) {
            if (err.keyCode == 13) {
                var msg = $(this).val().toString().trim();
                sendNew(msg);
                if (err.preventDefault) 
                    err.preventDefault();
                return false;
            }
        });

        function sendNew(msg) {
            if (msg != "") {
                socket.emit("private", admin, msg, userName);
                $('.write_msg').val('');
            }
        }

        socket.on('new-room-created', function (roomNo) {
            console.log('new-room-created room%d', roomNo);
        });

        socket.on('redirect', function (href) {
            location.href = href;
        });

        window.onbeforeunload = function () {
            socket.emit('disconnect');
        };
    </script>
</html>

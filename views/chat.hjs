<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="robots" content="noindex, nofollow">
    <meta name="description" content="Chat">
    <meta name="keywords" content="Chat">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <title>Chat</title>
    <link rel="stylesheet" href="/stylesheets/chat.css" />
    <script>
        if ('{{room}}' == '') location.href = '/';

        var socket = io();
        socket.emit("joinRoom", '{{ username}}', '{{room}}', {{ newRoom }});

        socket.on("user-left-room", function (room, name) {
            console.log('User "' + name + '" disconnected');
        });

        socket.on('new-room-created', function (roomNo) {
            console.log('new-room-created room%d', roomNo);
        });

        socket.on('redirect', function (href) {
            location.href = href;
        });

        window.onbeforeunload = function () {
            socket.emit('disconnect');
        };
    </script>
    <script>
        var pley = true;
        function dl() {
            if (document.getElementById('ndc').value != '') {
                document.getElementById('ndc').style.color = '#fff';
                document.getElementById('ndht').innerHTML = document.getElementById('ndht').innerHTML.replace('<br><br><br>', '')
                    + '<div class="khach">  <img src="" alt="" class="img" />'
                    + document.getElementById('ndc').value.replace(/<\/?[^>]+(>|$)/g, '')
                    + '<br /> <span>Đang gửi...</span></div><br><br><br>'; window.scroll(0, 10000);
            }
        }
    </script>
</head>

<body>
    <div id="main">
        <div id="loichaobatdau">
            <div class="nhanvien">
                <img class="img" src="fshare.png" alt="" style="width:64px;height: 64px">
            </div>
            <div class="loichao"></div>
        </div>
        <div id="ndht" style="padding-bottom: 44px">
            {{!-- <div class="admin"></div> --}}
        </div>
    </div>
    <div id="hopchat" style="height: 46px">
        <form id="formchat" style="width:100%; height: 40px; background: #3b3b3b;padding: 14px 0px 0px 0px;"
            name="formchat" onsubmit="return validateForm()" method="POST">
            <input onfocus="document.getElementById('hopchat').style.height='44px';
                            document.getElementById('formchat').style.height='40px'; 
                            document.getElementById('ndht').style.paddingBottom='44px';
                            window.scroll(0,10000);" spellcheck="false" id="ndc" type="text" maxlength="500"
                name="noidung" style="width: 76%; height: 20px; padding: 6px 0px 3px; float:left; background: #fff;"
                placeholder="Nhập nội dung..." autocomplete="off">
            <input id="gui" name="gui" style="width:20%;height:36px;padding-left:3px;display:inline; float: right;"
                type="submit" value="Gửi">
            <input id="dophangiai" name="dophangiai" type="hidden" value="1536x864">
        </form>
    </div>
    <script>document.getElementById("dophangiai").value = screen.width + "x" + screen.height;</script>
</body>

</html>